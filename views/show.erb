<h2><%= @memo.title %></h2>
<p class="content py-2 h4 font-weight-normal"><%= @memo.content.gsub(/\n/, '<br>') %></p>
<div class="d-flex justify-content-center">
  <a href="/<%= @memo.id %>/edit" class="btn btn-success btn-lg m-3 px-4">変更</a>
  <form action="/<%= @memo.id %>" method="POST">
    <input type="hidden" name="_method" value="DELETE">
    <input type="submit" value="削除" class="btn btn-danger btn-lg m-3 px-4">
  </form>
</div>