<form action="/<%= @memo.id %>" method="post">
  <div class="form-group">
    <label for="title" class="h3 font-weight-normal">タイトル</label>
    <input type="text" name="title" value=<%= @memo.title %> class="form-control">
  </div>
  <div class="form-group">
    <label for="content" class="h3 font-weight-normal">内容</label>
    <textarea name="content" cols="30" rows="10" class="form-control"><%= @memo.content %></textarea>
  </div>
  <input type="hidden" name="_method" value="PUT">
  <input type="submit" value="変更" class="d-block btn btn-success btn-lg px-5 mx-auto mt-4">
</form>